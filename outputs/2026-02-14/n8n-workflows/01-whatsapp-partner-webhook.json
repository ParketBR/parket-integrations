      "position": [250, 300]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={ {\"status\": \"ok\", \"correlation_id\": $json.correlation_id} }",
        "options": {
          "responseCode": 200
        }
      },
      "id": "respond-ok",
      "name": "Respond OK",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [500, 200]
    },
    {
      "parameters": {
        "operation": "insert",
        "schema": "public",
        "table": "events",
        "columns": "correlation_id,event_type,source,payload,idempotency_key,status",
        "options": {
          "priority": "NORMAL"
        }
      },
      "id": "insert-event",
      "name": "Registrar Evento",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.4,
      "position": [500, 400],
      "credentials": {
        "postgres": {
          "id": "POSTGRES_CREDENTIAL_ID",
          "name": "Parket Postgres"
        }
      },
      "notesInFlow": true,
      "notes": "Insere na tabela events com idempotency_key para dedup"
    },
    {
      "parameters": {
        "jsCode": "// Extrair dados da mensagem WhatsApp\nconst body = $input.first().json.body;\nconst msg = body.data || body;\n\nconst phone = (msg.key?.remoteJid || msg.from || '').replace('@s.whatsapp.net', '').replace('@c.us', '');\nconst pushName = msg.pushName || msg.senderName || '';\nconst messageType = msg.messageType || (msg.message?.conversation ? 'text' : 'media');\nconst content = msg.message?.conversation || msg.message?.extendedTextMessage?.text || msg.body || '';\n\n// Normalizar telefone BR\nlet phoneNorm = phone.replace(/\\D/g, '');\nif (phoneNorm.length === 11) phoneNorm = '55' + phoneNorm;\nelse if (phoneNorm.length === 10) phoneNorm = '55' + phoneNorm.slice(0,2) + '9' + phoneNorm.slice(2);\n\nconst correlationId = $input.first().json.headers?.['x-correlation-id'] || \n  require('crypto').randomUUID();\n\nreturn [{\n  json: {\n    correlation_id: correlationId,\n    phone: phone,\n    phone_normalized: phoneNorm,\n    name: pushName,\n    message_type: messageType,\n    content: content,\n    raw: body,\n    idempotency_key: `whatsapp_${msg.key?.id || msg.messageId || Date.now()}`\n  }\n}];"
      },
      "id": "parse-whatsapp",
      "name": "Parse WhatsApp Message",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [750, 400]
    },
    {
      "parameters": {
        "operation": "select",
        "schema": "public",
        "table": "leads",
        "limit": 1,
        "where": {
          "values": [
            {
              "column": "phone_normalized",
              "value": "={{ $json.phone_normalized }}"
            }
          ]
        }
      },
      "id": "check-lead-exists",
      "name": "Buscar Lead Existente",
