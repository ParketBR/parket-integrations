    {
      "parameters": {
        "jsCode": "// Notificar grupo SDR no WhatsApp\nconst lead = $input.first().json;\nreturn [{\n  json: {\n    phone: $env.WHATSAPP_SDR_GROUP,\n    message: `ðŸŸ¢ *Novo lead WhatsApp*\\n\\n` +\n      `*Nome:* ${lead.name || 'NÃ£o informado'}\\n` +\n      `*Telefone:* ${lead.phone}\\n` +\n      `*Mensagem:* ${lead.content?.substring(0, 200) || '-'}\\n\\n` +\n      `Responder em atÃ© 5 min (SLA)`\n  }\n}];"
      },
      "id": "notify-sdr",
      "name": "Notificar SDR",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1750, 500]
    }
