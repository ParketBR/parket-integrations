# ===========================================
# Parket Integrations — Environment Variables
# ===========================================
# Copy to .env and fill with real values
# NEVER commit .env to git

# Server
PORT=3000
NODE_ENV=development

# Database (Postgres)
DATABASE_URL=postgresql://parket:parket_dev@localhost:5432/parket_integrations

# Redis
REDIS_URL=redis://localhost:6379

# Pipedrive CRM
PIPEDRIVE_API_TOKEN=your_pipedrive_api_token
PIPEDRIVE_COMPANY_DOMAIN=your_company.pipedrive.com

# Meta (Facebook) Lead Ads
META_APP_SECRET=your_meta_app_secret
META_VERIFY_TOKEN=your_webhook_verify_token
META_ACCESS_TOKEN=your_meta_access_token
META_PAGE_ID=your_page_id

# Google Ads
GOOGLE_ADS_WEBHOOK_SECRET=your_google_webhook_secret

# WhatsApp (Evolution API)
WHATSAPP_API_URL=http://localhost:8080
WHATSAPP_API_KEY=your_evolution_api_key
WHATSAPP_INSTANCE=parket-main

# WhatsApp notification targets
WHATSAPP_SDR_GROUP=group_id_for_sdr_alerts
WHATSAPP_OPS_GROUP=group_id_for_ops_alerts

# Sentry
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Slack (optional alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Google (Proposals + Sheets — optional, works without)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
GOOGLE_PROPOSALS_FOLDER_ID=your_google_drive_folder_id
GOOGLE_PIPELINE_SHEET_ID=your_google_sheets_spreadsheet_id
